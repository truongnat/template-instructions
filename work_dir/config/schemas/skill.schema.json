{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sdlc-kit.io/schemas/skill.schema.json",
  "title": "Skill Configuration",
  "description": "Schema for SDLC Kit skill configuration files",
  "type": "object",
  "required": ["id", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique skill identifier",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable skill name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of what the skill does and when to use it",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Skill version number",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "location": {
      "type": "string",
      "description": "Skill location scope",
      "enum": ["project", "global"],
      "default": "project"
    },
    "category": {
      "type": "string",
      "description": "Skill category for organization",
      "enum": ["analysis", "implementation", "testing", "deployment", "documentation", "security", "monitoring", "general"]
    },
    "parameters": {
      "type": "array",
      "description": "List of parameters the skill accepts",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Parameter name",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "description": "Parameter data type",
            "enum": ["string", "number", "boolean", "array", "object"]
          },
          "description": {
            "type": "string",
            "description": "Parameter description"
          },
          "required": {
            "type": "boolean",
            "description": "Whether the parameter is required",
            "default": false
          },
          "default": {
            "description": "Default value for the parameter"
          },
          "validation": {
            "type": "object",
            "description": "Validation rules for the parameter",
            "properties": {
              "min": {
                "type": "number",
                "description": "Minimum value (for numbers) or length (for strings/arrays)"
              },
              "max": {
                "type": "number",
                "description": "Maximum value (for numbers) or length (for strings/arrays)"
              },
              "pattern": {
                "type": "string",
                "description": "Regex pattern for string validation"
              },
              "enum": {
                "type": "array",
                "description": "List of allowed values"
              }
            }
          }
        }
      }
    },
    "returns": {
      "type": "object",
      "description": "Description of what the skill returns",
      "properties": {
        "type": {
          "type": "string",
          "description": "Return value type",
          "enum": ["string", "number", "boolean", "array", "object", "void"]
        },
        "description": {
          "type": "string",
          "description": "Description of the return value"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "List of other skills or tools this skill depends on",
      "items": {
        "type": "string"
      }
    },
    "examples": {
      "type": "array",
      "description": "Usage examples for the skill",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Example title"
          },
          "description": {
            "type": "string",
            "description": "Example description"
          },
          "input": {
            "type": "object",
            "description": "Example input parameters"
          },
          "output": {
            "description": "Expected output"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorizing and searching skills",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the skill is currently active",
      "default": true
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the skill",
      "properties": {
        "author": {
          "type": "string",
          "description": "Skill author"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "license": {
          "type": "string",
          "description": "License for the skill"
        },
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Repository URL"
        }
      }
    }
  },
  "additionalProperties": false
}
