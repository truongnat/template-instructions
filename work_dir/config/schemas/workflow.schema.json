{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sdlc-kit.io/schemas/workflow.schema.json",
  "title": "Workflow Configuration",
  "description": "Schema for SDLC Kit workflow configuration files",
  "type": "object",
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow name",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version number",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the workflow"
    },
    "agents": {
      "type": "array",
      "description": "List of agent IDs participating in this workflow",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "tasks": {
      "type": "array",
      "description": "List of tasks to be executed in the workflow",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique task identifier",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "description": "Task type",
            "enum": ["analysis", "implementation", "validation", "testing", "deployment", "research"]
          },
          "config": {
            "type": "object",
            "description": "Task-specific configuration",
            "properties": {
              "priority": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "timeout": {
                "type": "integer",
                "minimum": 1,
                "description": "Task timeout in seconds"
              }
            }
          },
          "dependencies": {
            "type": "array",
            "description": "List of task IDs that must complete before this task",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "timeout": {
      "type": "integer",
      "description": "Workflow timeout in seconds",
      "minimum": 1,
      "default": 3600
    },
    "retry_policy": {
      "type": "object",
      "description": "Retry policy for failed tasks",
      "properties": {
        "max_attempts": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3
        },
        "backoff_multiplier": {
          "type": "number",
          "minimum": 1,
          "default": 2
        }
      }
    },
    "environment": {
      "type": "string",
      "description": "Target environment for workflow execution",
      "enum": ["development", "test", "staging", "production"]
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the workflow",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
