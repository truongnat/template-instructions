{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sdlc-kit.io/schemas/rule.schema.json",
  "title": "Rule Configuration",
  "description": "Schema for SDLC Kit routing and policy rule configuration files",
  "type": "object",
  "required": ["id", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique rule identifier",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable rule name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of what the rule does and when it applies",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "description": "Type of rule",
      "enum": ["routing", "validation", "policy", "security", "quality"],
      "default": "routing"
    },
    "priority": {
      "type": "integer",
      "description": "Rule priority (lower number = higher priority)",
      "minimum": 1,
      "maximum": 100,
      "default": 5
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the rule is currently active",
      "default": true
    },
    "conditions": {
      "type": "array",
      "description": "List of conditions that must be met for the rule to match",
      "items": {
        "type": "object",
        "required": ["field", "operator", "value"],
        "properties": {
          "field": {
            "type": "string",
            "description": "Field to evaluate (e.g., 'request.text', 'context.priority')"
          },
          "operator": {
            "type": "string",
            "description": "Comparison operator",
            "enum": ["equals", "not_equals", "contains", "not_contains", "matches", "greater_than", "less_than", "in", "not_in"]
          },
          "value": {
            "description": "Value to compare against (can be string, number, boolean, or array)"
          },
          "case_sensitive": {
            "type": "boolean",
            "description": "Whether string comparisons are case-sensitive",
            "default": false
          }
        }
      },
      "minItems": 1
    },
    "condition_logic": {
      "type": "string",
      "description": "Logic for combining multiple conditions",
      "enum": ["AND", "OR"],
      "default": "AND"
    },
    "actions": {
      "type": "array",
      "description": "Actions to take when the rule matches",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of action to perform",
            "enum": ["route", "reject", "transform", "log", "alert", "execute"]
          },
          "target": {
            "type": "string",
            "description": "Target for the action (e.g., workflow path, agent ID)"
          },
          "parameters": {
            "type": "object",
            "description": "Additional parameters for the action"
          }
        }
      },
      "minItems": 1
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the rule",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "type": "array",
      "description": "Example inputs that should match this rule",
      "items": {
        "type": "object",
        "properties": {
          "input": {
            "type": "string",
            "description": "Example input text"
          },
          "expected_action": {
            "type": "string",
            "description": "Expected action for this input"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
