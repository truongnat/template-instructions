/**
 * Hero Section - Main value proposition
 */
---

<section class="section pt-24 md:pt-32">
  <div class="container text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 mb-8 rounded-full bg-secondary border border-border text-sm text-muted-foreground animate-fade-in">
      <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
      21 Intelligence Sub-Agents • 23 Workflows • 17 AI Roles
    </div>

    <!-- Headline -->
