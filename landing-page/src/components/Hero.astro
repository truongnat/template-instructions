<section 
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
  aria-labelledby="hero-title"
  role="banner"
>
  <!-- Animated gradient mesh background -->
  <div class="absolute inset-0 gradient-mesh" aria-hidden="true"></div>
  
  <!-- Animated particles -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-float" style="top: 10%; left: 10%;"></div>
    <div class="absolute w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-float" style="top: 60%; right: 10%; animation-delay: 2s;"></div>
    <div class="absolute w-96 h-96 bg-pink-500/20 rounded-full blur-3xl animate-float" style="bottom: 10%; left: 50%; animation-delay: 4s;"></div>
  </div>
  
  <div class="section-container relative z-10">
    <div class="text-center max-w-5xl mx-auto">
      <!-- Story-driven headline with improved typography -->
      <h1 id="hero-title" class="hero-title font-black mb-8 animate-slide-up">
        Ship Production-Ready Apps
        <span class="block gradient-text glow-text mt-2">
          in Days, Not Months
        </span>
      </h1>
      
      <!-- Story-driven subtitle -->
      <div class="glass-card max-w-3xl mx-auto mb-10 animate-slide-up" style="animation-delay: 0.2s;">
        <p class="body-large text-blue-100">
          Watch AI handle <span class="font-bold gradient-text">planning, design, development, testing, and deployment</span>â€”while you focus on building great products.
        </p>
      </div>
      
      <!-- Benefit-driven CTAs with improved accessibility -->
      <nav aria-label="Primary call-to-action" class="flex flex-col sm:flex-row gap-6 justify-center mb-16 animate-slide-up" style="animation-delay: 0.4s;">
        <a 
          href="#quick-start" 
          class="btn-primary group"
          aria-label="Start building in 5 minutes - Get started guide"
        >
          <span class="relative z-10 flex items-center justify-center gap-2">
            Start Building in 5 Minutes
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </a>
        <a 
          href="#use-cases" 
          class="btn-secondary group"
          aria-label="See how Agentic SDLC works - View use cases"
        >
          <span class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            See How It Works
          </span>
        </a>
      </nav>
      
      <!-- Enhanced code block with glassmorphism and improved accessibility -->
      <div class="code-block max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.6s;" role="region" aria-label="Installation code example">
        <div class="flex items-center justify-between mb-4">
          <div class="flex gap-2" aria-hidden="true">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <button 
            class="text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-2"
            onclick="navigator.clipboard.writeText('npm install -g agentic-sdlc'); this.innerHTML = 'âœ“ Copied!'; setTimeout(() => this.innerHTML = 'ðŸ“‹ Copy', 2000)"
            aria-label="Copy installation command to clipboard"
          >
            ðŸ“‹ Copy
          </button>
        </div>
        <pre class="text-left"><code><span class="text-gray-500"># Install globally</span>
<span class="text-blue-400">npm</span> <span class="text-purple-400">install</span> <span class="text-pink-400">-g</span> agentic-sdlc

<span class="text-gray-500"># Create your project</span>
<span class="text-blue-400">agentic-sdlc</span> <span class="text-purple-400">create</span> my-app

<span class="text-gray-500"># Start building with AI</span>
<span class="text-green-400">/pm</span> Build a todo app with auth</code></pre>
      </div>
    </div>
  </div>
  
  <!-- Animated scroll indicator with improved accessibility -->
  <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 scroll-indicator animate-fade-in" style="animation-delay: 1s;" aria-hidden="true">
    <div class="flex flex-col items-center gap-2 text-blue-300">
      <span class="text-sm font-medium">Scroll to explore</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  /* Additional component-specific styles */
  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }
</style>
