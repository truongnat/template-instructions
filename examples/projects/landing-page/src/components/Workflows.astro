<section id="workflows" class="section">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        SDK Usage & CLI Tools
      </h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Comprehensive Python SDK with clean API and optional CLI tools for rapid development
      </p>
    </div>

    <!-- SDK Components -->
    <div class="mb-12">
      <h3 class="text-xl font-semibold text-center mb-6">SDK Components</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {usagePatterns.map((pattern, index) => (
          <div 
            class="card text-center group cursor-default"
            style={`animation-delay: ${index * 0.05}s`}
          >
            <span class="text-2xl mb-2 block group-hover:scale-110 transition-transform">
              {pattern.icon}
            </span>
            <code class="text-sm font-mono text-primary font-medium">
              {pattern.name}
            </code>
            <p class="text-xs text-muted-foreground mt-1">
              {pattern.desc}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- CLI Commands -->
    <div>
      <h3 class="text-xl font-semibold text-center mb-6">CLI Commands (Optional)</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {cliCommands.map((cmd, index) => (
          <div 
            class="card text-center group cursor-default"
            style={`animation-delay: ${index * 0.05}s`}
          >
            <span class="text-2xl mb-2 block group-hover:scale-110 transition-transform">
              {cmd.icon}
            </span>
            <code class="text-sm font-mono text-primary font-medium">
              {cmd.name}
            </code>
            <p class="text-xs text-muted-foreground mt-1">
              {cmd.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
