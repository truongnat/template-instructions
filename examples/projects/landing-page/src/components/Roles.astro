<section id="roles" class="section bg-secondary/30">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Comprehensive SDK Features
      </h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Everything you need to build AI-powered development tools
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 max-w-5xl mx-auto">
      {featureGroups.map((group) => (
        <div class="card">
          <div class="text-center mb-3">
            <span class="text-xl">{group.icon}</span>
            <h3 class="text-sm font-semibold text-muted-foreground mt-1">
              {group.category}
            </h3>
          </div>
          <div class="space-y-2">
            {group.features.map((feature) => (
              <div class="text-center">
                <code class="text-xs font-mono text-primary">{feature.name}</code>
                <p class="text-xs text-muted-foreground">{feature.title}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
